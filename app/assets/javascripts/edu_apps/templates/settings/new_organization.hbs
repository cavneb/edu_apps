<div class="settings-content">
  <form {{action save on="submit"}} class="chunky-form">
    <div {{bindAttr class=":controls errors.name:error"}}>
      <label>Name</label>
      {{input type="text" value=name placeholder="Organization Name"}}
      <small class="below">{{errors.name}}</small>
    </div>
    <div class="control-group">
      <div class="controls">
        <button class="btn btn-primary" type="submit">Create Organization</button>
        {{#linkTo 'settings.organizations' classNames="btn-aside"}}Cancel{{/linkTo}}
      </div>
    </div>
  </form>
</div>