<div class="bg-light-grey">
  <div class="container">
    <div class="row-fluid">
      <div class="span4 offset2">
        <h2 class="page-header">User Profile</h2>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4 offset2">
        <p>
          Need to change your password?<br>
          You can {{#linkTo "change_password"}}change your password here{{/linkTo}}
        </p>
      </div>
      <div class="span4">
        <form {{action save on="submit"}} class="chunky-form">
          <div {{bindAttr class=":controls errors.email:error"}}>
            {{input type="email" value=email placeholder="Email Address"}}
            <small class="below">{{errors.email}}</small>
          </div>
          <div {{bindAttr class=":controls errors.name:error"}}>
            {{input type="text" value=name placeholder="Full Name"}}
            <small class="below">{{errors.name}}</small>
          </div>
          <div class="control-group">
            <div class="controls">
              <button {{bindAttr disabled="isNotDirty"}} class="btn btn-primary" type="submit">Save Changes</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>