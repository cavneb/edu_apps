<div class="bg-light-grey">
  <div class="container">
    <div class="row-fluid">
      <div class="span4 offset2">
        <h2 class="page-header">Login</h2>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4 offset2">
        <p>Do not have an account?<br>Then you can {{#linkTo 'session.register'}}register here{{/linkTo}}</p>
      </div>
      <div class="span4">
        <form {{action "login" on="submit"}} class="session-form">
          <div class="controls">
            {{input type="email" value=email placeholder="Email Address"}}
          </div>
          <div class="controls">
            {{input type="password" value=password placeholder="Password"}}
          </div>
          <div class="controls">
            <button class="btn btn-primary" type="submit">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>